    $perms = group_list_permissions($type);
  }

  return $perms + array(
    'update group' => array(
      'title' => t('Edit group'),
      'description' => t('Edit the group.'),
    ),
    'administer group' => array(
      'title' => t('Administer group'),
      'description' => t('Manage or block users, and manage their role assignments in the group.'),
    ),
  );
}

/**
 * Implement hook_group_default_permissions().
 */
function group_group_default_permissions() {
  // Create default permissions for group content nodes if they already exist.
  $perms = array();
  foreach (node_permissions_get_configured_types() as $type) {
    if (group_is_group_content_type('node', $type)) {
      $info = node_type_get_type($type);
      $type = check_plain($info->type);

      $perms["update own $type content"] = array(GROUP_AUTHENTICATED_ROLE);
      $perms["delete own $type content"] = array(GROUP_AUTHENTICATED_ROLE);

      $perms["update any $type content"] = array(GROUP_ADMINISTRATOR_ROLE);
      $perms["delete any $type content"] = array(GROUP_ADMINISTRATOR_ROLE);
    }
  }
  return $perms + array(
    'update group' => array(GROUP_ADMINISTRATOR_ROLE),
    'administer group' => array(GROUP_ADMINISTRATOR_ROLE),
  );
}

